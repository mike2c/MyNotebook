@{
}
<h4>Create new note	</h4>
<form asp-action="create" asp-controller="notes" method="post">
	<div class="field">
		<label class="field__wrapper" asp-for="Title">
			<input asp-for="Title" required maxlength="100">
			<span class="field__label">Normal</span>
			<span asp-validation-for="Title" class="text-danger"></span>
		</label>		
		@*<small class="form-text text-muted">We'll never share your email with anyone else.</small>*@
	</div>
	<div class="field">
		<textarea asp-for="Body">Hello, World!</textarea>
	</div>
	<div class="actions">
		<button class="button">
			Save Changes
		</button>
	</div>	
</form>
